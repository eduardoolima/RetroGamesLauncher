<Window x:Class="RetroGamesLauncher.Views.AddGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RetroGamesLauncher.Views"
        mc:Ignorable="d"
        Title="AddGame" Height="450" Width="800"
        Background="#1e1e1e"
        WindowStyle="None" 
        AllowsTransparency="True" 
        ResizeMode="CanResizeWithGrip"
        xmlns:UserControls="clr-namespace:RetroGamesLauncher.Views.UserControls">

    <Border Background="#1e1e1e" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <!-- Barra personalizada -->
                <RowDefinition Height="*"/>
                <!-- Conteúdo -->
            </Grid.RowDefinitions>

            <!-- BARRA SUPERIOR -->
            <UserControls:CustomTitleBar Grid.Row="0"/>

            <!-- CONTEÚDO PRINCIPAL COM SCROLL -->
            <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Cadastrar Novo Jogo"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="15,0,15,10">
                        <!-- Título -->
                        <TextBlock Text="Título" Foreground="White"/>
                        <TextBox x:Name="TitleTextBox" Padding="5" FontSize="14"
                                 Background="#252526" Foreground="White" BorderBrush="#3c3c3c"/>

                        <!-- Descrição -->
                        <TextBlock Text="Descrição" Margin="0,10,0,0" Foreground="White"/>
                        <TextBox x:Name="DescriptionTextBox" Padding="5" FontSize="14" AcceptsReturn="True" Height="80"
                                 Background="#252526" Foreground="White" BorderBrush="#3c3c3c"/>

                        <!-- Caminho da ROM -->
                        <TextBlock Text="Caminho da ROM" Margin="0,10,0,0" Foreground="White"/>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="📁" Width="30" Height="30" Margin="0,0,5,0"
                                Click="BtnAddRom_Click"
                                ToolTip="Adicionar Rom"
                                Background="#252526"
                                Foreground="White"
                                BorderBrush="#3c3c3c">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#33FFFFFF" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <TextBox x:Name="RomPathTextBox" Grid.Column="1" Padding="5" FontSize="14" AcceptsReturn="True"
                                Background="#252526" Foreground="White" BorderBrush="#3c3c3c"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!--Imagem-->
                            <StackPanel Grid.Column="0">

                                <TextBlock Text="Capa do Jogo (Imagem)" Margin="10,10,10,0" Foreground="White" HorizontalAlignment="Center"/>
                                <Button Content="Selecionar Capa" 
                                    Click="BtnAddGameCover_Click"
                                    Margin="10"
                                    Height="25">
                                </Button>
                                <Image x:Name="ImgGameCoverViewer" 
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    Stretch="UniformToFill"/>
                            </StackPanel>

                            <!--Screenshot-->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Screenshot do Jogo (Imagem)" Margin="10,10,10,0" Foreground="White" HorizontalAlignment="Center"/>
                                <Button Content="Selecionar Screenshot"
                                    Click="BtnAddGameScreenshot_Click"
                                    Margin="10"
                                    Height="25"/>
                                <Image x:Name="ImgGameScreenshotViewer"
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    Stretch="UniformToFill"/>
                            </StackPanel>
                        </Grid>
                                                
                        <!-- Gênero + Botão de adicionar -->
                        <TextBlock Text="Gênero" Margin="0,10,0,0" Foreground="White"/>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ComboBox x:Name="GenderComboBox"
                                SelectionChanged="ComboBox_SelectionChanged"
                                Grid.Column="0"
                                DisplayMemberPath="Gender"
                                SelectedValuePath="Id"
                                Background="#252526"
                                Foreground="White"
                                BorderBrush="#3c3c3c"
                                Padding="4"
                                FontSize="14"/>

                            <Button Grid.Column="1" Content="➕" Width="30" Height="30" Margin="5,0,0,0"
                                Click="AddGender_Click"
                                ToolTip="Adicionar novo gênero"
                                Background="#252526"
                                Foreground="White"
                                BorderBrush="#3c3c3c">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#33FFFFFF" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Botões -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,10">
                        <Button Content="Salvar ✔️" Height="30" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
                        <Button Content="Cancelar" Height="30" Width="100" Click="CancelButton_Click"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
